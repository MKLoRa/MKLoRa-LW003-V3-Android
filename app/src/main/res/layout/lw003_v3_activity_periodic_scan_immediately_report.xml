<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/lw003_v3_grey_f2f2f2"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/lw003_v3_blue_2f84d0">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:drawableLeft="@drawable/lw003_v3_ic_back"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:onClick="onBack"
        android:paddingLeft="16dp"
        android:text=""
        android:textColor="@color/lw003_v3_white_ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/periodic_scan_immediately_report"
        android:textColor="@color/lw003_v3_white_ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onSave"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/lw003_v3_ic_save" />

</RelativeLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/lw003_v3_white_ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Scan Duration"
        android:textColor="@color/lw003_v3_black_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/et_scan_duration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_scan_duration" />

    <EditText
        android:id="@+id/et_scan_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="3~65535"
        android:inputType="number"
        android:maxLength="5"
        android:text=""
        android:textColor="@color/lw003_v3_black_333333"
        android:textColorHint="@color/lw003_v3_grey_ebebeb"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:textColor="@color/lw003_v3_black_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/et_scan_duration"
        app:layout_constraintLeft_toRightOf="@id/et_scan_duration"
        app:layout_constraintTop_toTopOf="@id/et_scan_duration" />

    <View
        style="@style/lw003_v3_divider_line"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_scan_duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Scan Interval"
        android:textColor="@color/lw003_v3_black_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/et_scan_interval"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_scan_interval" />

    <EditText
        android:id="@+id/et_scan_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="3~65535"
        android:inputType="number"
        android:maxLength="5"
        android:text=""
        android:textColor="@color/lw003_v3_black_333333"
        android:textColorHint="@color/lw003_v3_grey_ebebeb"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_scan_duration"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:textColor="@color/lw003_v3_black_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/et_scan_interval"
        app:layout_constraintLeft_toRightOf="@id/et_scan_interval"
        app:layout_constraintTop_toTopOf="@id/et_scan_interval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_scan_interval_tips"
        android:textColor="@color/lw003_v3_black_333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_scan_interval"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>